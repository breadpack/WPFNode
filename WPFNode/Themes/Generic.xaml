<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFNode.Controls"
    xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
    xmlns:converters="clr-namespace:WPFNode.Converters"
    xmlns:interfaces="clr-namespace:WPFNode.Interfaces"
    x:Class="WPFNode.Themes.Generic">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WPFNode;component/Themes/FlowPortStyles.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/NodeControlStyle.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/PortControlStyles.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/ConnectionStyle.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/NodeGroupStyle.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/NodeCanvasStyle.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/SearchPanelStyle.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/PropertyGridStyles.xaml"/>
        <ResourceDictionary Source="/WPFNode;component/Themes/PropertyGridTemplates.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- 공용 Converters -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:TypeToUserFriendlyNameConverter x:Key="TypeToUserFriendlyNameConverter"/>
    <converters:TypeToColorConverter x:Key="TypeToColorConverter" />
    <converters:CenterOffsetConverter x:Key="CenterOffsetConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <converters:NullToVisibleConverter x:Key="NullToVisibleConverter"/>
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />

</ResourceDictionary> 