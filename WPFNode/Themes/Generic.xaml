<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFNode.Controls"
    xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
    xmlns:converters="clr-namespace:WPFNode.Converters"
    x:Class="WPFNode.Themes.Generic">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WPFNode;component/Themes/FlowPortStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <Style TargetType="{x:Type local:NodeControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Effect="{TemplateBinding Effect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/> <!-- Flow In 영역 -->
                                <RowDefinition Height="Auto"/> <!-- 헤더 -->
                                <RowDefinition Height="*"/>    <!-- 메인 콘텐츠 -->
                                <RowDefinition Height="Auto"/> <!-- Flow Out 영역 -->
                            </Grid.RowDefinitions>
                            
                            <!-- Flow In 포트 -->
                            <ItemsControl Grid.Row="0"
                                        HorizontalAlignment="Center"
                                        ItemsSource="{Binding FlowInPorts}"
                                        Margin="0,4,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:FlowInPortControl DataContext="{Binding}"
                                                              Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                            
                            <!-- 헤더 -->
                            <Border Grid.Row="1" 
                                    Background="#FF2D2D30" 
                                    Padding="8,4">
                                <TextBlock Text="{Binding Model.Name}"
                                         Foreground="White"
                                         FontWeight="Bold"/>
                            </Border>

                            <!-- 포트 영역 -->
                            <Grid Grid.Row="2" Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 입력 포트 -->
                                <ItemsControl Grid.Column="0"
                                            x:Name="InputPortsPanel"
                                            ItemsSource="{Binding InputPorts}"
                                            Margin="0,0,4,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:InputPortControl DataContext="{Binding}"
                                                                  Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- 노드 내용 -->
                                <ContentPresenter Grid.Column="1"
                                                Content="{TemplateBinding Content}"/>

                                <!-- 출력 포트 -->
                                <ItemsControl Grid.Column="2"
                                            x:Name="OutputPortsPanel"
                                            ItemsSource="{Binding OutputPorts}"
                                            Margin="4,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:OutputPortControl DataContext="{Binding}"
                                                                   Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                            
                            <!-- Flow Out 포트 -->
                            <ItemsControl Grid.Row="3"
                                        HorizontalAlignment="Center"
                                        ItemsSource="{Binding FlowOutPorts}"
                                        Margin="0,0,0,4">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:FlowOutPortControl DataContext="{Binding}"
                                                               Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter Property="BorderBrush" Value="#FF007ACC"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#FF007ACC" 
                                                    ShadowDepth="0" 
                                                    Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <converters:TypeToColorConverter x:Key="TypeToColorConverter" />
    <Style TargetType="{x:Type local:PortControl}">
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PortControl}">
                    <Grid Background="{TemplateBinding Background}"
                          Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 연결점 -->
                        <Ellipse x:Name="PART_ConnectionPoint"
                                Width="12" Height="12"
                                Fill="{Binding DataType, Converter={StaticResource TypeToColorConverter}, FallbackValue=#FF404040}"
                                Stroke="#FF606060"
                                StrokeThickness="1"
                                Margin="0,6,0,6"/>
                                
                        <!-- 포트 이름과 타입 -->
                        <StackPanel x:Name="PART_PortInfo"
                                  Grid.Column="1"
                                  Margin="4,0,0,0">
                            <TextBlock x:Name="PART_PortName"
                                     Text="{Binding Name}"
                                     VerticalAlignment="Center"
                                     Foreground="Black"/>
                            <TextBlock x:Name="PART_PortType"
                                     Text="{Binding DataType.Name, FallbackValue=Unknown}"
                                     VerticalAlignment="Center"
                                     Foreground="{Binding DataType, Converter={StaticResource TypeToColorConverter}, FallbackValue=Black}"
                                     FontSize="9"/>
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsInput" Value="True">
                            <Setter TargetName="PART_ConnectionPoint" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="PART_ConnectionPoint" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="PART_PortInfo" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="PART_PortName" Property="TextAlignment" Value="Left"/>
                            <Setter TargetName="PART_PortType" Property="TextAlignment" Value="Left"/>
                            <Setter TargetName="PART_PortInfo" Property="Margin" Value="4,0,0,0"/>
                        </Trigger>
                        <Trigger Property="IsInput" Value="False">
                            <Setter TargetName="PART_ConnectionPoint" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="PART_ConnectionPoint" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="PART_PortInfo" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="PART_PortName" Property="TextAlignment" Value="Right"/>
                            <Setter TargetName="PART_PortType" Property="TextAlignment" Value="Right"/>
                            <Setter TargetName="PART_PortInfo" Property="Margin" Value="0,0,4,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:InputPortControl}" BasedOn="{StaticResource {x:Type local:PortControl}}"/>

    <Style x:Key="PropertyGridInputPortStyle" TargetType="{x:Type local:InputPortControl}" BasedOn="{StaticResource {x:Type local:PortControl}}">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PortControl}">
                    <Grid Background="{TemplateBinding Background}"
                          Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Ellipse x:Name="PART_ConnectionPoint"
                                Width="12" Height="12"
                                Fill="{Binding DataType, Converter={StaticResource TypeToColorConverter}, FallbackValue=#FF404040}"
                                Stroke="#FF606060"
                                StrokeThickness="1">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Fill" Value="#FF00AA00"/>
                                            <Setter Property="Stroke" Value="#FF00FF00"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Fill" Value="#FF606060"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:OutputPortControl}" BasedOn="{StaticResource {x:Type local:PortControl}}"/>

    <Style TargetType="{x:Type local:ConnectionControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ConnectionControl}">
                    <Canvas>
                        <!-- 메인 연결선 -->
                        <Path x:Name="PART_Path"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="2">
                            <Path.Data>
                                <PathGeometry>
                                    <PathGeometry.Figures>
                                        <PathFigureCollection>
                                            <PathFigure x:Name="PART_PathFigure">
                                                <PathFigure.Segments>
                                                    <PathSegmentCollection>
                                                        <BezierSegment x:Name="PART_BezierSegment"
                                                                      Point1="0,0" Point2="0,0" Point3="0,0"/>
                                                    </PathSegmentCollection>
                                                </PathFigure.Segments>
                                            </PathFigure>
                                        </PathFigureCollection>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <!-- 화살표 -->
                        <Path x:Name="PART_Arrow"
                              Fill="{TemplateBinding Foreground}"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="2">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="0,0">
                                        <LineSegment Point="0,-6"/>
                                        <LineSegment Point="8,0"/>
                                        <LineSegment Point="0,6"/>
                                        <LineSegment Point="0,0"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    <Style TargetType="{x:Type local:NodeGroupControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeGroupControl}">
                    <Border Background="{Binding ViewModel.Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToBrushConverter}}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:NodeCanvasControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeCanvasControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="250" MinWidth="150"/>
                            </Grid.ColumnDefinitions>

                            <!-- 캔버스 영역 -->
                            <ScrollViewer Grid.Column="0"
                                        x:Name="PART_ScrollViewer"
                                        HorizontalScrollBarVisibility="Auto"
                                        VerticalScrollBarVisibility="Auto">
                                <Canvas x:Name="PART_Canvas"
                                        Background="Transparent"
                                        ClipToBounds="True"
                                        Width="4000" Height="4000">
                                    <Canvas.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="{Binding Scale}"
                                                          ScaleY="{Binding Scale}"/>
                                        </TransformGroup>
                                    </Canvas.RenderTransform>

                                    <!-- 연결선 -->
                                    <ItemsControl ItemsSource="{Binding Connections}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas IsItemsHost="True" ZIndex="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <local:ConnectionControl DataContext="{Binding}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- 노드 -->
                                    <ItemsControl ItemsSource="{Binding Nodes}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas IsItemsHost="True" ZIndex="2"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <local:NodeControl DataContext="{Binding}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Style.Resources>
                                                    <converters:CenterOffsetConverter x:Key="LocalCenterOffsetConverter"/>
                                                </Style.Resources>
                                                <Setter Property="Canvas.Left">
                                                    <Setter.Value>
                                                        <MultiBinding Converter="{StaticResource LocalCenterOffsetConverter}">
                                                            <Binding Path="Model.X"/>
                                                            <Binding ElementName="PART_Canvas" Path="Width"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Canvas.Top">
                                                    <Setter.Value>
                                                        <MultiBinding Converter="{StaticResource LocalCenterOffsetConverter}">
                                                            <Binding Path="Model.Y"/>
                                                            <Binding ElementName="PART_Canvas" Path="Height"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                    </ItemsControl>
                                </Canvas>
                            </ScrollViewer>
                            
                            <!-- GridSplitter -->
                            <GridSplitter Grid.Column="1"
                                          Width="5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Stretch"
                                          Background="#FFD0D0D0"
                                          BorderBrush="#FFA0A0A0"
                                          BorderThickness="1,0"
                                          ShowsPreview="True"
                                          Cursor="SizeWE">
                                <GridSplitter.Template>
                                    <ControlTemplate TargetType="GridSplitter">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Rectangle Width="1" 
                                                       HorizontalAlignment="Center"
                                                       Fill="#FF808080"/>
                                        </Border>
                                    </ControlTemplate>
                                </GridSplitter.Template>
                            </GridSplitter>

                            <!-- 속성 그리드 -->
                            <Border Grid.Column="2"
                                   Background="#FFF5F5F5"
                                   BorderBrush="#FFD0D0D0"
                                   BorderThickness="0,0,0,0">
                                <local:PropertyGrid CanvasViewModel="{Binding Path=.}"
                                                  Background="White"
                                                  BorderBrush="Gray"
                                                  BorderThickness="0,0,0,1"
                                                  Margin="0"/>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:SearchPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchPanel}">
                    <Grid>
                        <TextBox x:Name="PART_SearchBox"
                                 Padding="4"
                                 BorderThickness="1"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 Background="{TemplateBinding Background}"
                                 Text="검색..."/>
                        
                        <Popup x:Name="PART_Popup"
                               PlacementTarget="{Binding ElementName=PART_SearchBox}"
                               Placement="Bottom"
                               Width="{Binding ActualWidth, ElementName=PART_SearchBox}"
                               MaxHeight="400"
                               AllowsTransparency="True">
                            <Border Background="White"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="1">
                                <ListBox x:Name="PART_ResultList"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="4">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Name}"
                                                         FontWeight="Bold"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="{Binding Category}"
                                                         Foreground="Gray"
                                                         Margin="8,0,0,0"/>
                                                <TextBlock Grid.Row="1"
                                                         Grid.ColumnSpan="2"
                                                         Text="{Binding Description}"
                                                         TextWrapping="Wrap"
                                                         Foreground="Gray"
                                                         FontSize="11"
                                                         Margin="0,2,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Value Converters -->
    <converters:CenterOffsetConverter x:Key="CenterOffsetConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <converters:NullToVisibleConverter x:Key="NullToVisibleConverter"/>

    <!-- PropertyGrid 관련 리소스 -->
    <!-- 텍스트 입력 -->
    <DataTemplate x:Key="TextBoxTemplate">
        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 MinWidth="60"
                 Margin="2"/>
    </DataTemplate>

    <!-- 여러 줄 텍스트 입력 -->
    <DataTemplate x:Key="MultilineTextTemplate">
        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 MinHeight="60"
                 VerticalScrollBarVisibility="Auto"
                 Margin="2"/>
    </DataTemplate>

    <!-- 숫자 입력 -->
    <DataTemplate x:Key="NumberBoxTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" 
                    Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    MinWidth="60"
                    Margin="2"
                    IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button Grid.Column="1"
                    Content="연결"
                    Margin="2,2,2,2"
                    Padding="4,0"
                    Visibility="{Binding CanConnectToPort, Mode=TwoWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Command="{Binding ConnectToPortCommand}"/>
        </Grid>
    </DataTemplate>

    <!-- 체크박스 -->
    <DataTemplate x:Key="CheckBoxTemplate">
        <CheckBox IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center"
                 Margin="2"/>
    </DataTemplate>

    <!-- 색상 선택 -->
    <DataTemplate x:Key="ColorPickerTemplate">
        <ComboBox SelectedValue="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 MinWidth="60"
                 Margin="2">
            <ComboBox.ItemsSource>
                <x:Array Type="media:Color">
                    <media:Color>White</media:Color>
                    <media:Color>Black</media:Color>
                    <media:Color>Red</media:Color>
                    <media:Color>Green</media:Color>
                    <media:Color>Blue</media:Color>
                    <media:Color>Yellow</media:Color>
                    <media:Color>Orange</media:Color>
                    <media:Color>Purple</media:Color>
                </x:Array>
            </ComboBox.ItemsSource>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="16" Height="16" Margin="0,0,4,0">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </DataTemplate>

    <!-- EnumFlagsTemplate -->
    <DataTemplate x:Key="EnumFlagsTemplate">
        <Border BorderBrush="#333" BorderThickness="1" CornerRadius="3" Padding="5" Margin="0,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- 컨트롤 헤더 -->
                <Grid Grid.Row="0" Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="{Binding TotalItemCount, StringFormat=총 {0}개 항목}" 
                               VerticalAlignment="Center" 
                               FontWeight="Medium"/>
                    
                    <Button Grid.Column="1" 
                            Content="모두 선택" 
                            Command="{Binding SelectAllCommand}"
                            Margin="4,0" 
                            Padding="4,1"/>
                    
                    <Button Grid.Column="2" 
                            Content="모두 해제" 
                            Command="{Binding UnselectAllCommand}"
                            Padding="4,1"/>
                </Grid>
                
                <!-- 검색 -->
                <TextBox Grid.Row="1" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,4"
                         Padding="4,2"
                         BorderBrush="#AAA"
                         BorderThickness="1"
                         VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="2">
                                            <Grid>
                                                <TextBlock Text="검색..." 
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           Padding="{TemplateBinding Padding}"
                                                           Foreground="Gray"
                                                           Visibility="{TemplateBinding Text, Converter={StaticResource NullToVisibleConverter}}"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Padding="{TemplateBinding Padding}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- 카테고리별 항목 목록 -->
                <ScrollViewer Grid.Row="2" 
                              MaxHeight="200" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Categories}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Header="{Binding Name}" 
                                          IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                          Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Margin="0,2">
                                    <Expander.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Name, StringFormat={}{0}}"
                                                           VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding VisibleCount, StringFormat=({0})}"
                                                           VerticalAlignment="Center" 
                                                           Margin="4,0,0,0" 
                                                           Foreground="Gray"/>
                                            </Grid>
                                        </DataTemplate>
                                    </Expander.HeaderTemplate>
                                    
                                    <!-- 카테고리 내 항목 -->
                                    <ItemsControl ItemsSource="{Binding Values}" Margin="10,2,0,2">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding DisplayName}" 
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                          Margin="0,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </DataTemplate>

    <!-- GuidTemplate -->
    <DataTemplate x:Key="GuidTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     IsReadOnly="{Binding IsConnected}"
                     Grid.Column="0"
                     Margin="0,0,5,0"/>
            <Button Content="생성" 
                    Command="{Binding GenerateGuidCommand}" 
                    Grid.Column="1"
                    Padding="5,0"
                    IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBooleanConverter}}"/>
        </Grid>
    </DataTemplate>
    
    <!-- DropDownTemplate -->
    <DataTemplate x:Key="DropDownTemplate">
        <ComboBox ItemsSource="{Binding Options}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="DisplayName"
                  MinWidth="60"
                  Margin="2"/>
    </DataTemplate>

    <!-- ListTemplate -->
    <DataTemplate x:Key="ListTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 헤더 -->
            <Border Grid.Row="0" 
                    Background="#FFF0F0F0" 
                    BorderBrush="#FFD0D0D0" 
                    BorderThickness="1,1,1,0"
                    Padding="4,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding ItemCount, StringFormat=항목 수: {0}}"
                             VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="추가"
                            Padding="4,0"
                            Command="{Binding AddItemCommand}"/>
                </Grid>
            </Border>
            
            <!-- 항목 목록 -->
            <Border Grid.Row="1" 
                    BorderBrush="#FFD0D0D0" 
                    BorderThickness="1,0,1,0"
                    MinHeight="60"
                    MaxHeight="200">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Content="{Binding Editor}"/>
                                    <Button Grid.Column="1"
                                            Content="↑"
                                            Width="24"
                                            Margin="2,0,0,0"
                                            Command="{Binding MoveUpCommand}"
                                            ToolTip="위로 이동"/>
                                    <Button Grid.Column="2"
                                            Content="×"
                                            Width="24"
                                            Margin="2,0,0,0"
                                            Command="{Binding RemoveCommand}"
                                            ToolTip="항목 삭제"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            
            <!-- 푸터 -->
            <Border Grid.Row="2" 
                    Background="#FFF0F0F0" 
                    BorderBrush="#FFD0D0D0" 
                    BorderThickness="1,0,1,1"
                    Padding="4,2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="모두 삭제"
                            Padding="4,0"
                            Command="{Binding ClearItemsCommand}"
                            Margin="0,0,2,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </DataTemplate>

    <!-- PropertyGrid 스타일 -->
    <Style TargetType="{x:Type local:PropertyGrid}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PropertyGrid}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 헤더 -->
                        <Border Grid.Row="0"
                                Background="#FF2D2D30"
                                Padding="8,4">
                            <TextBlock Text="속성"
                                     Foreground="White"
                                     FontWeight="Bold"/>
                        </Border>
                        
                        <!-- 검색 박스 -->
                        <TextBox Grid.Row="1" 
                                 Text="{Binding SearchText, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="5"
                                 Padding="5"
                                 BorderThickness="1"
                                 BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                                 Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                 Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                                 VerticalContentAlignment="Center"/>
                        
                        <!-- 프로퍼티 목록 -->
                        <ScrollViewer Grid.Row="2" 
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding FilteredProperties, RelativeSource={RelativeSource TemplatedParent}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- 프로퍼티 이름 -->
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding DisplayName}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"/>
                                            
                                            <!-- 프로퍼티 값 컨트롤 -->
                                            <ContentPresenter Grid.Column="1"
                                                            Content="{Binding Control}"/>
                                            
                                            <!-- 포트 연결 토글 버튼 -->
                                            <ToggleButton Grid.Column="2"
                                                        Width="16" Height="16"
                                                        Margin="4,0,0,0"
                                                        IsChecked="{Binding CanConnectToPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        ToolTip="포트로 사용">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border x:Name="border"
                                                                            BorderThickness="1"
                                                                            BorderBrush="#FF606060"
                                                                            Background="Transparent">
                                                                        <Path x:Name="icon"
                                                                              Width="10" Height="10"
                                                                              Stretch="Uniform"
                                                                              Fill="#FF606060"
                                                                              Data="M12,3C7.58,3 4,4.79 4,7C4,9.21 7.58,11 12,11C16.42,11 20,9.21 20,7C20,4.79 16.42,3 12,3M4,9V12C4,14.21 7.58,16 12,16C16.42,16 20,14.21 20,12V9C20,11.21 16.42,13 12,13C7.58,13 4,11.21 4,9M4,14V17C4,19.21 7.58,21 12,21C16.42,21 20,19.21 20,17V14C20,16.21 16.42,18 12,18C7.58,18 4,16.21 4,14Z"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsChecked" Value="True">
                                                                            <Setter TargetName="border" Property="Background" Value="#FF404040"/>
                                                                            <Setter TargetName="icon" Property="Fill" Value="#FFFFFFFF"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="0,2"/>
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
