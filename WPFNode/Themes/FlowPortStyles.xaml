<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFNode.Controls">
    
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <Style TargetType="{x:Type local:FlowInPortControl}" BasedOn="{StaticResource {x:Type local:PortControl}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PortControl}">
                    <Grid Background="{TemplateBinding Background}"
                          Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 삼각형 모양의 Flow In 포트 -->
                        <Path Grid.Column="0" 
                              Width="12" Height="12"
                              Fill="White" 
                              Stroke="#FF303030"
                              StrokeThickness="1.5"
                              Data="M 0,0 L 10,5 L 0,10 Z"
                              HorizontalAlignment="Left" 
                              Margin="0,2">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Fill" Value="#FF00AA00"/>
                                            <Setter Property="Stroke" Value="#FF00FF00"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Fill" Value="#FF606060"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                        
                        <!-- 포트 이름 -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type local:FlowOutPortControl}" BasedOn="{StaticResource {x:Type local:PortControl}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PortControl}">
                    <Grid Background="{TemplateBinding Background}"
                          Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 포트 이름 -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding Name}"
                                   Margin="0,0,4,0"
                                   TextAlignment="Right"
                                   VerticalAlignment="Center"/>
                                   
                        <!-- 삼각형 모양의 Flow Out 포트 -->
                        <Path Grid.Column="1" 
                              Width="12" Height="12"
                              Fill="White" 
                              Stroke="#FF303030"
                              StrokeThickness="1.5"
                              Data="M 0,0 L 0,10 L 10,5 Z"
                              HorizontalAlignment="Right"
                              Margin="0,2">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Fill" Value="#FF00AA00"/>
                                            <Setter Property="Stroke" Value="#FF00FF00"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Fill" Value="#FF606060"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
