<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFNode.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nodes="clr-namespace:WPFNode.Core.ViewModels.Nodes;assembly=WPFNode.Core">

    <Style TargetType="{x:Type local:NodeControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 헤더 -->
                            <Border Grid.Row="0" 
                                    Background="#FF2D2D30" 
                                    Padding="8,4">
                                <TextBlock Text="{Binding Model.Name}"
                                         Foreground="White"
                                         FontWeight="Bold"/>
                            </Border>

                            <!-- 포트 영역 -->
                            <Grid Grid.Row="1" Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 입력 포트 -->
                                <ItemsControl Grid.Column="0"
                                            ItemsSource="{Binding InputPorts}"
                                            Margin="0,0,4,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:PortControl DataContext="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- 노드 내용 -->
                                <ContentPresenter Grid.Column="1"
                                                Content="{TemplateBinding Content}"/>

                                <!-- 출력 포트 -->
                                <ItemsControl Grid.Column="2"
                                            ItemsSource="{Binding OutputPorts}"
                                            Margin="4,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:PortControl DataContext="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter Property="BorderBrush" Value="Orange"/>
                            <Setter Property="BorderThickness" Value="2"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:PortControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PortControl}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 포트 연결점 -->
                        <Ellipse Grid.Column="0"
                                Width="12" Height="12"
                                Fill="{TemplateBinding Background}"
                                Stroke="{TemplateBinding BorderBrush}"/>

                        <!-- 포트 이름 -->
                        <TextBlock Grid.Column="1"
                                 Text="{Binding Model.Name}"
                                 Margin="4,0,0,0"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:ConnectionControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ConnectionControl}">
                    <Path x:Name="PART_Path"
                          Stroke="{TemplateBinding Foreground}"
                          StrokeThickness="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:NodeGroupControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeGroupControl}">
                    <Border Background="{Binding ViewModel.Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToBrushConverter}}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:NodeCanvasControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeCanvasControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Canvas x:Name="PART_Canvas"
                                    Background="Transparent"
                                    ClipToBounds="True">
                                <Canvas.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform X="{Binding OffsetX}"
                                                          Y="{Binding OffsetY}"/>
                                        <ScaleTransform ScaleX="{Binding Scale}"
                                                      ScaleY="{Binding Scale}"/>
                                    </TransformGroup>
                                </Canvas.RenderTransform>

                                <!-- 연결선 -->
                                <ItemsControl ItemsSource="{Binding Connections}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas IsItemsHost="True"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:ConnectionControl ViewModel="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- 노드 -->
                                <ItemsControl ItemsSource="{Binding Nodes}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas IsItemsHost="True"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:NodeControl DataContext="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding Model.X}"/>
                                            <Setter Property="Canvas.Top" Value="{Binding Model.Y}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                </ItemsControl>
                            </Canvas>
                            
                            <local:SearchPanel x:Name="PART_SearchPanel"
                                             Visibility="Collapsed"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Top"
                                             Margin="0,20,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:SearchPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchPanel}">
                    <Grid>
                        <TextBox x:Name="PART_SearchBox"
                                 Padding="4"
                                 BorderThickness="1"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 Background="{TemplateBinding Background}"
                                 Text="검색..."/>
                        
                        <Popup x:Name="PART_Popup"
                               PlacementTarget="{Binding ElementName=PART_SearchBox}"
                               Placement="Bottom"
                               Width="{Binding ActualWidth, ElementName=PART_SearchBox}"
                               MaxHeight="400"
                               AllowsTransparency="True">
                            <Border Background="White"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="1">
                                <ListBox x:Name="PART_ResultList"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="4">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Name}"
                                                         FontWeight="Bold"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="{Binding Category}"
                                                         Foreground="Gray"
                                                         Margin="8,0,0,0"/>
                                                <TextBlock Grid.Row="1"
                                                         Grid.ColumnSpan="2"
                                                         Text="{Binding Description}"
                                                         TextWrapping="Wrap"
                                                         Foreground="Gray"
                                                         FontSize="11"
                                                         Margin="0,2,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 색상 변환기 -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

</ResourceDictionary> 
