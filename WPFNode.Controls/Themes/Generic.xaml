<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFNode.Controls"
    xmlns:converters="clr-namespace:WPFNode.Controls.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nodes="clr-namespace:WPFNode.Core.ViewModels.Nodes;assembly=WPFNode.Core"
    xmlns:behaviors="clr-namespace:WPFNode.Controls.Behaviors"
    xmlns:commands="clr-namespace:WPFNode.Controls.Commands"
    xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore">

    <Style TargetType="{x:Type local:NodeControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Effect="{TemplateBinding Effect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 헤더 -->
                            <Border Grid.Row="0" 
                                    Background="#FF2D2D30" 
                                    Padding="8,4">
                                <TextBlock Text="{Binding Model.Name}"
                                         Foreground="White"
                                         FontWeight="Bold"/>
                            </Border>

                            <!-- 포트 영역 -->
                            <Grid Grid.Row="1" Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 입력 포트 -->
                                <ItemsControl Grid.Column="0"
                                            x:Name="InputPortsPanel"
                                            ItemsSource="{Binding InputPorts}"
                                            Margin="0,0,4,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:InputPortControl DataContext="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- 노드 내용 -->
                                <ContentPresenter Grid.Column="1"
                                                Content="{TemplateBinding Content}"/>

                                <!-- 출력 포트 -->
                                <ItemsControl Grid.Column="2"
                                            x:Name="OutputPortsPanel"
                                            ItemsSource="{Binding OutputPorts}"
                                            Margin="4,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:OutputPortControl DataContext="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter Property="BorderBrush" Value="#FF007ACC"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#FF007ACC" 
                                                    BlurRadius="8" 
                                                    ShadowDepth="0" 
                                                    Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:PortControl}">
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PortControl}">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 연결점 -->
                        <Ellipse x:Name="PART_ConnectionPoint"
                                Width="12" Height="12"
                                Fill="#FF404040"
                                Stroke="#FF606060"
                                StrokeThickness="1"
                                Margin="0,6,0,6"/>
                                
                        <!-- 포트 이름 -->
                        <TextBlock x:Name="PART_PortName"
                                 Grid.Column="1"
                                 Text="{Binding Name}"
                                 VerticalAlignment="Center"
                                 Margin="4,0,0,0"
                                 Foreground="Black"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsInput" Value="True">
                            <Setter TargetName="PART_ConnectionPoint" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="PART_ConnectionPoint" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="PART_PortName" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="PART_PortName" Property="TextAlignment" Value="Left"/>
                            <Setter TargetName="PART_PortName" Property="Margin" Value="4,0,0,0"/>
                        </Trigger>
                        <Trigger Property="IsInput" Value="False">
                            <Setter TargetName="PART_ConnectionPoint" Property="Grid.Column" Value="1"/>
                            <Setter TargetName="PART_ConnectionPoint" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="PART_PortName" Property="Grid.Column" Value="0"/>
                            <Setter TargetName="PART_PortName" Property="TextAlignment" Value="Right"/>
                            <Setter TargetName="PART_PortName" Property="Margin" Value="0,0,4,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:InputPortControl}" BasedOn="{StaticResource {x:Type local:PortControl}}"/>
    <Style TargetType="{x:Type local:OutputPortControl}" BasedOn="{StaticResource {x:Type local:PortControl}}"/>

    <Style TargetType="{x:Type local:ConnectionControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ConnectionControl}">
                    <Canvas>
                        <!-- 메인 연결선 -->
                        <Path x:Name="PART_Path"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="2">
                            <Path.Data>
                                <PathGeometry>
                                    <PathGeometry.Figures>
                                        <PathFigureCollection>
                                            <PathFigure x:Name="PART_PathFigure">
                                                <PathFigure.Segments>
                                                    <PathSegmentCollection>
                                                        <BezierSegment x:Name="PART_BezierSegment"
                                                                      Point1="0,0" Point2="0,0" Point3="0,0"/>
                                                    </PathSegmentCollection>
                                                </PathFigure.Segments>
                                            </PathFigure>
                                        </PathFigureCollection>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <!-- 화살표 -->
                        <Path x:Name="PART_Arrow"
                              Fill="{TemplateBinding Foreground}"
                              Stroke="{TemplateBinding Foreground}"
                              StrokeThickness="2">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="0,0">
                                        <LineSegment Point="0,-6"/>
                                        <LineSegment Point="8,0"/>
                                        <LineSegment Point="0,6"/>
                                        <LineSegment Point="0,0"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:NodeGroupControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeGroupControl}">
                    <Border Background="{Binding ViewModel.Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToBrushConverter}}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:NodeCanvasControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeCanvasControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                        HorizontalScrollBarVisibility="Auto"
                                        VerticalScrollBarVisibility="Auto">
                                <Canvas x:Name="PART_Canvas"
                                        Background="Transparent"
                                        ClipToBounds="True"
                                        Width="4000" Height="4000">
                                    <Canvas.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="{Binding Scale}"
                                                          ScaleY="{Binding Scale}"/>
                                        </TransformGroup>
                                    </Canvas.RenderTransform>

                                    <!-- 연결선 -->
                                    <ItemsControl ItemsSource="{Binding Connections}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas IsItemsHost="True" ZIndex="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <local:ConnectionControl DataContext="{Binding}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- 노드 -->
                                    <ItemsControl ItemsSource="{Binding Nodes}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas IsItemsHost="True" ZIndex="0"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <local:NodeControl DataContext="{Binding}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Style.Resources>
                                                    <converters:CenterOffsetConverter x:Key="LocalCenterOffsetConverter"/>
                                                </Style.Resources>
                                                <Setter Property="Canvas.Left">
                                                    <Setter.Value>
                                                        <MultiBinding Converter="{StaticResource LocalCenterOffsetConverter}">
                                                            <Binding Path="Model.X"/>
                                                            <Binding ElementName="PART_Canvas" Path="Width"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Canvas.Top">
                                                    <Setter.Value>
                                                        <MultiBinding Converter="{StaticResource LocalCenterOffsetConverter}">
                                                            <Binding Path="Model.Y"/>
                                                            <Binding ElementName="PART_Canvas" Path="Height"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                    </ItemsControl>
                                </Canvas>
                            </ScrollViewer>
                            
                            <local:SearchPanel x:Name="PART_SearchPanel"
                                             Visibility="Collapsed"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Top"
                                             Margin="0,20,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:SearchPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchPanel}">
                    <Grid>
                        <TextBox x:Name="PART_SearchBox"
                                 Padding="4"
                                 BorderThickness="1"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 Background="{TemplateBinding Background}"
                                 Text="검색..."/>
                        
                        <Popup x:Name="PART_Popup"
                               PlacementTarget="{Binding ElementName=PART_SearchBox}"
                               Placement="Bottom"
                               Width="{Binding ActualWidth, ElementName=PART_SearchBox}"
                               MaxHeight="400"
                               AllowsTransparency="True">
                            <Border Background="White"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="1">
                                <ListBox x:Name="PART_ResultList"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="4">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Name}"
                                                         FontWeight="Bold"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="{Binding Category}"
                                                         Foreground="Gray"
                                                         Margin="8,0,0,0"/>
                                                <TextBlock Grid.Row="1"
                                                         Grid.ColumnSpan="2"
                                                         Text="{Binding Description}"
                                                         TextWrapping="Wrap"
                                                         Foreground="Gray"
                                                         FontSize="11"
                                                         Margin="0,2,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 색상 변환기 -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

    <!-- Value Converters -->
    <converters:CenterOffsetConverter x:Key="CenterOffsetConverter"/>

    <DataTemplate x:Key="TextBoxTemplate">
        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 MinWidth="60"/>
    </DataTemplate>

    <DataTemplate x:Key="NumberBoxTemplate">
        <Grid behaviors:NumberBoxCommandBehavior.CommandBindings="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding Value, Mode=TwoWay, StringFormat={Binding Format}, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="60"/>
            <StackPanel Grid.Column="1" Orientation="Vertical" Width="16">
                <Button Content="▲" Height="12" Padding="0" 
                        Command="{x:Static commands:NumberBoxCommands.Increment}"
                        CommandParameter="{Binding}"/>
                <Button Content="▼" Height="12" Padding="0" 
                        Command="{x:Static commands:NumberBoxCommands.Decrement}"
                        CommandParameter="{Binding}"/>
            </StackPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="CheckBoxTemplate">
        <CheckBox IsChecked="{Binding Value, Mode=TwoWay}"
                  VerticalAlignment="Center"/>
    </DataTemplate>

    <DataTemplate x:Key="ColorPickerTemplate">
        <ComboBox SelectedValue="{Binding Value, Mode=TwoWay}"
                  MinWidth="60">
            <ComboBox.ItemsSource>
                <x:Array Type="media:Color">
                    <media:Color>Red</media:Color>
                    <media:Color>Green</media:Color>
                    <media:Color>Blue</media:Color>
                    <media:Color>Yellow</media:Color>
                    <media:Color>Orange</media:Color>
                    <media:Color>Purple</media:Color>
                    <media:Color>Pink</media:Color>
                    <media:Color>Brown</media:Color>
                    <media:Color>Gray</media:Color>
                    <media:Color>White</media:Color>
                    <media:Color>Black</media:Color>
                </x:Array>
            </ComboBox.ItemsSource>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="16" Height="16" Margin="0,0,4,0">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </DataTemplate>

    <DataTemplate x:Key="MultilineTextTemplate">
        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 MinWidth="60"
                 MinHeight="60"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>
    </DataTemplate>

</ResourceDictionary> 
